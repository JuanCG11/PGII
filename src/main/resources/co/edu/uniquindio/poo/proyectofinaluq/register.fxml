<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.poo.proyectofinaluq.logistica.controller.RegisterController">
    <center>
        <VBox spacing="10" alignment="CENTER" padding="18">
            <Label text="Registro de usuario" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
            <GridPane hgap="8" vgap="8">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Contraseña:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="8">
                <Button text="Crear cuenta" onAction="#onRegistrar"/>
                <Button text="Volver" onAction="#onVolver"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>